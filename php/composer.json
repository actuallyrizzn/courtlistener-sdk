{
    "name": "courtlistener/sdk-php",
    "description": "An unofficial PHP SDK for the CourtListener REST API",
    "type": "library",
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "CourtListener SDK Community",
            "email": "actuallyrizzn@gmail.com"
        }
    ],
    "keywords": [
        "legal",
        "court",
        "api",
        "sdk",
        "courtlistener",
        "case law",
        "dockets",
        "judges",
        "unofficial"
    ],
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "*",
        "vlucas/phpdotenv": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "*",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "CourtListener\\": "src/CourtListener/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CourtListener\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-unit": "phpunit --testsuite Unit",
        "test-integration": "phpunit --testsuite Integration",
        "test-mock": "phpunit --testsuite Mock",
        "test-live": "phpunit --testsuite Live --group live",
        "test-e2e": "phpunit --testsuite E2E --group e2e",
        "test-all": "phpunit --testsuite All",
        "test-coverage": "phpunit --coverage-html coverage",
        "test-coverage-unit": "phpunit --testsuite Unit --coverage-html coverage/unit",
        "test-coverage-all": "phpunit --testsuite All --coverage-html coverage/all",
        "stan": "php phpstan.phar analyse",
        "stan-baseline": "php phpstan.phar analyse --generate-baseline",
        "quality": [
            "@stan",
            "@test-unit"
        ],
        "quality-full": [
            "@stan",
            "@test-all"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
